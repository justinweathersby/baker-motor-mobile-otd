<div class="container">
  <h2 class="text-center" style="padding: 1rem 0">Edit Moderator</h2>

  <%= form_for @moderator, url: edit_moderator_path(@moderator), html: { method: :put } do |f| %>

    <div class="form-group row">
      <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <%= f.email_field :email, :id=> "inputEmail", :class=> "form-control", :placeholder=>"Email", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputName" class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-10">
        <%= f.text_field :name, :id=> "inputName", :class=> "form-control", :placeholder=>"Name" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="exampleSelect1" class="col-sm-2 col-form-label">Dealership</label>
      <div class="col-sm-10">
        <%= select_tag :dealership_id, options_for_select(Dealership.all.collect{ |u| [u.name, u.id] }), class: "form-control" %>
      </div>
    </div>

    <div class="row text-center"><%= image_tag @moderator.image.url(:small) if @moderator.image.present? %></div>

    <div class="form-group row">
      <div class="col-sm-2">
        <%= link_to 'Back', root_path, :class=>"btn btn-warning", style: "width:100%;"%>
      </div>
      <div class="col-sm-10">
        <%= f.submit "Edit", :type => "submit", :class=>"btn btn-primary", style: "width:100%;" %>
      </div>
    </div>
  <% end %>

</div>
