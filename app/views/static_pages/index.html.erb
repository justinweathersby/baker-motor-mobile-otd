<% if user_signed_in? %>
  <% if current_user.has_role? :admin %>
    <%= render 'partials/admin_dashboard' %>
  <% elsif current_user.has_role? :moderator, :any %>
    <%= render 'partials/moderator_dashboard' %>
  <% else %>
    <%= render 'partials/customer_dashboard' %>
  <% end %>
<% else %>
  <%= render 'partials/index' %>
<% end %>
