<p id="notice"><%= notice %></p>

<h1 class="text-md-center">Baker Motor Dealerships</h1>

<table class="table table-hover" style="padding-top:5rem;">
  <thead>
    <tr>
      <th>
        Logo
      </th>
      <th>Name</th>
      <th colspan="1" class="text-center">Actions</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @dealerships.each do |dealership| %>
      <tr>
        <td><%= image_tag dealership.logo.url(:thumb) %></td>
        <td><%= dealership.name %></td>
          <td>
            <!-- <%= link_to 'Show', dealership, :class=>"btn btn-primary"  %> -->
            <%= link_to 'Edit', edit_dealership_path(dealership), :class=>"btn btn-secondary"  %>
            <%= link_to 'Destroy', dealership, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Dealership', new_dealership_path, :class=>"btn btn-primary"  %>
