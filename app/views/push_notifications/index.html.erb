<div class="col-lg-12">
  <div class="row">
    <h1 class="page-heading">Push Notifications</h1>
  </div>
<div class="row text-right">
    <%= link_to root_path, :class => "btn btn-info" do %>
      <i class="fa fa-chevron-circle-left fa-fw" aria-hidden="true"></i>  Dashboard
    <% end %>
    <%= link_to "Send Push Notification", new_push_notification_path, :class=>"btn btn-warning" if current_user.has_role? :admin%>
</div>

<div class="row" style="padding: 2rem 0">
  <div class="col-sm-12" style="padding:0">
    <!-- BEGIN BORDERED TABLE PORTLET-->
    <div class="portlet light portlet-fit ">
        <div class="portlet-body" style="padding-top: 15px;">
            <div class="table-scrollable table-scrollable-borderless" style="overflow: visible !imporant;">
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="push_notifications_index_table" style="width:100% important!">
                    <thead>
                        <tr class="uppercase" >
                            <th style=" color: #455A64"> Message </th>
                            <th style=" color: #455A6A"> Date Sent </th>
                            <th style=" color: #455A64"> Actions </th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @push_notifications.each  do | notification| %>
                        <tr>
                          <td style="text-align:left; padding-left:10px"><%= notification.message %></td>
                          <td>
                            <%= notification.created_at.strftime("%m/%d/%Y at %I:%M%p") %>
                          </td>
                          <td>
                            <%= link_to 'Remove', notification, :class=>"btn red btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>

                <div class="row" style="text-align:center;">
                  <%= link_to 'Add Moderator', new_moderator_url, :class=>"btn btn-outline btn-sm active btn-blue", :style=>"border-radius: 5px !important; margin-top:10px; font-family: 'Muli', 'Helvetica', 'Arial', 'sans-serif'; text-shadow:none; font-variant:none; width: 92%; margin-top:30px" %>
                </div>
            </div>
        </div>
    </div>
    <!-- END BORDERED TABLE PORTLET-->
  </div>
  </div>
</div>
